<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.AddPage"
             Title="AddPage">
    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Header -->
        <Label 
            Text="Add New Task"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#333" />

        <!-- Title Input -->
        <Frame BackgroundColor="White" CornerRadius="10" Padding="10">
            <VerticalStackLayout>
                <Label 
                    Text="Title"
                    FontSize="16"
                    TextColor="#666" />
                <Entry 
                    x:Name="TaskEntry"
                    Placeholder="Enter task title"
                    FontSize="16"
                    TextColor="Black" />
            </VerticalStackLayout>
        </Frame>

        <!-- Description Input -->
        <Frame BackgroundColor="White" CornerRadius="10" Padding="10">
            <VerticalStackLayout>
                <Label 
                    Text="Description"
                    FontSize="16"
                    TextColor="#666" />
                <Entry 
                    x:Name="DescriptionEntry"
                    Placeholder="Enter task description"
                    FontSize="16"
                    TextColor="Black"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Due Date Input -->
        <Frame BackgroundColor="White" CornerRadius="10" Padding="10">
            <VerticalStackLayout>
                <Label 
                    Text="Due Date"
                    FontSize="16"
                    TextColor="#666" />
                <Entry 
                    x:Name="DateEntry"
                    Placeholder="MM/DD/YYYY"
                    FontSize="16"
                    TextColor="Black" />
            </VerticalStackLayout>
        </Frame>

        <!-- Submit Button -->
        <Button 
            Text="Submit"
            FontSize="18"
            TextColor="White"
            CornerRadius="10"
            HeightRequest="50"
            HorizontalOptions="Fill" 
            Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>