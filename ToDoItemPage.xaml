<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.TodoItemPage">
    <VerticalStackLayout 
        Spacing="10"
        Padding="20">

        <!-- Task Title -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Task:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#333" />
            <Label x:Name="TaskTitleLabel"
                   FontSize="18"
                   TextColor="#666"
                   Margin="5,0,0,0" />
        </HorizontalStackLayout>

        <!-- Task Description -->
        <Label x:Name="TaskDescriptionLabel"
               FontSize="16"
               TextColor="#666"
               HorizontalTextAlignment="Center"
               LineBreakMode="WordWrap"
               Margin="0,10,0,10" />

        <!-- Due Date -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Due:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#333" />
            <Label x:Name="TaskDueDateLabel"
                   FontSize="18"
                   TextColor="#666"
                   Margin="5,0,0,0" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
