<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.MainPage">

    <ScrollView
        VerticalOptions="CenterAndExpand">
        <VerticalStackLayout
            VerticalOptions="Center"
            Padding="30,0"
            Spacing="25">

            <Label
                Text="C# - A, TODO List APP!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" 
                HeightRequest="100"/>

            <Button
                x:Name="AddTaskBtn"
                Text="Add Task" 
                SemanticProperties.Hint="Add a task to your to do list"
                Clicked="AddTaskBtn_Clicked"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="ViewTasksBtn"
                Text="View Tasks"
                SemanticProperties.Hint="View all tasks on your to do list"
                Clicked="ViewTasksBtn_Clicked"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
